@model WebEstacionamentoTcc20.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Registre-se";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Crie uma nova conta.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })


    <div class="row">
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="hidden" id="Tipousuario" name="Tipousuario" />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

        </div>

    </div>
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
    </div><br />

    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Tipo Usuario</legend>

            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="tpUsuarioap" value="option1">
                    <label class="form-check-label" for="gridRadios1">
                        Usuario Aplicativo
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="tpUsuariost" value="option2">
                    <label class="form-check-label" for="gridRadios2">
                        Usuario Estacionamento
                    </label>
                </div>


            </div>
        </div>
    </fieldset>

    
    <br /><br />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrar-se" />
        </div>
    </div>
}

